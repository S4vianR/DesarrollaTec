---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Galería | DesarrollaTec">
    <section class="bg-[#E8FFE9] py-40">
        <div class="container mx-auto">
          <h2 class="text-3xl font-bold text-center mb-6">Galería</h2>
          <div class="pswp-gallery grid grid-cols-1 sm:grid-cols-1 md:grid-cols-3 lg:grid-cols-6 gap-6" id="my-gallery">
            
            <div class="group relative">
              <a href="https://cdn.photoswipe.com/photoswipe-demo-images/photos/2/img-2500.jpg" 
                 data-pswp-width="1669" 
                 data-pswp-height="2500">
                <img src="https://cdn.photoswipe.com/photoswipe-demo-images/photos/2/img-200.jpg" alt="Descripción de la imagen" class="rounded-lg shadow-lg object-cover w-full">
              </a>
              <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-70 text-white text-sm p-2 opacity-0 group-hover:opacity-100 transition-opacity">
                <p>Descripción de la imagen</p>
                <p>Fuente: <label class="text-blue-400 underline" >Photoswipe</label></p>
              </div>
            </div>
            
            <div class="group relative">
              <a href="https://cdn.photoswipe.com/photoswipe-demo-images/photos/7/img-2500.jpg" 
                 data-pswp-width="1875" 
                 data-pswp-height="2500" 
                 data-cropped="true">
                <img src="https://cdn.photoswipe.com/photoswipe-demo-images/photos/7/img-200.jpg" alt="Otra descripción" class="rounded-lg shadow-lg object-cover w-full">
              </a>
              <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-70 text-white text-sm p-2 opacity-0 group-hover:opacity-100 transition-opacity">
                <p>Otra descripción</p>
                <p>Fuente: <label class="text-blue-400 underline" >Photoswipe</label></p>
              </div>
            </div>

            <div class="group relative">
              <a href="https://cdn.photoswipe.com/photoswipe-demo-images/photos/3/img-2500.jpg" 
                 data-pswp-width="2500" 
                 data-pswp-height="1666">
                <img src="https://cdn.photoswipe.com/photoswipe-demo-images/photos/3/img-200.jpg" alt="Descripción adicional" class="rounded-lg shadow-lg object-cover w-full">
              </a>
              <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-70 text-white text-sm p-2 opacity-0 group-hover:opacity-100 transition-opacity">
                <p>Descripción adicional</p>
                <p>Fuente: <label class="text-blue-400 underline" >Photoswipe</label></p>
              </div>
            </div>

            <div class="group relative">
              <a href="https://cdn.photoswipe.com/photoswipe-demo-images/photos/5/img-2500.jpg" 
                 data-pswp-width="2500" 
                 data-pswp-height="1668">
                <img src="https://cdn.photoswipe.com/photoswipe-demo-images/photos/5/img-200.jpg" alt="Descripción final" class="rounded-lg shadow-lg object-cover w-full">
              </a>
              <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-70 text-white text-sm p-2 opacity-0 group-hover:opacity-100 transition-opacity">
                <p>Descripción final</p>
                <p>Fuente: <label class="text-blue-400 underline" >Photoswipe</label></p>
              </div>
            </div>

          </div>
        </div>
    </section>
</Layout>
